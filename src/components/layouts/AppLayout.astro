---
const url = Astro.url;
const offset = Number(url.searchParams.get("weekOffset") ?? 0);

const prevUrl = `?weekOffset=${offset - 1}`;
const nextUrl = `?weekOffset=${offset + 1}`;
---

<section class="max-w-md mx-auto min-h-screen flex flex-col">
  <header
    class="sticky top-0 bg-surface/90 backdrop-blur border-b border-slate-800 p-4 z-10"
  >
    <h1 class="text-lg font-semibold">Turnos</h1>
  </header>

  <main
    class="flex-1 px-3 py-4 sm:p-4 space-y-4 overflow-y-auto snap-y snap-mandatory"
  >
    <slot />
  </main>

<footer
    class="sticky bottom-0 bg-surface/95 backdrop-blur border-t border-slate-800 p-3 flex justify-around text-sm"
  >
    <a 
      href="/" 
      class={`px-4 py-2 rounded-lg transition-all ${
        url.pathname === '/' 
          ? 'bg-accent text-base font-semibold' 
          : 'text-accent hover:bg-slate-800'
      }`}
    >
      Semana
    </a>
    <a 
      href="/hoy" 
      class={`px-4 py-2 rounded-lg transition-all ${
        url.pathname === '/hoy' 
          ? 'bg-accent text-base font-semibold' 
          : 'text-accent hover:bg-slate-800'
      }`}
    >
      Hoy
    </a>
    <a 
      href="/dia" 
      class={`px-4 py-2 rounded-lg transition-all ${
        url.pathname === '/dia' 
          ? 'bg-accent text-base font-semibold' 
          : 'text-accent hover:bg-slate-800'
      }`}
    >
      DÃ­a
    </a>
  </footer>
</section>
