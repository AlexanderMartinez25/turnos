---
const url = Astro.url;
const offset = Number(url.searchParams.get("weekOffset") ?? 0);

const prevUrl = `?weekOffset=${offset - 1}`;
const nextUrl = `?weekOffset=${offset + 1}`;
---

<section class="max-w-md mx-auto min-h-screen flex flex-col">
<header
    class="sticky top-0 bg-gradient-to-r from-surface/80 via-surface/70 to-surface/60 backdrop-blur-2xl border-b border-white/10 p-4 z-10 shadow-lg shadow-black/20"
  >
    <h1 class="text-lg font-semibold">Turnos</h1>
  </header>

  <main
    class="flex-1 px-3 py-4 sm:p-4 space-y-4 overflow-y-auto snap-y snap-mandatory"
  >
    <slot />
  </main>

<footer
    class="sticky bottom-0 bg-gradient-to-r from-surface/90 via-surface/80 to-surface/70 backdrop-blur-2xl border-t border-white/10 p-3 flex justify-around text-sm shadow-lg shadow-black/20"
  >
    <a 
      href="/" 
      class={`px-4 py-2 rounded-lg transition-all backdrop-blur-sm ${
        url.pathname === '/' 
          ? 'bg-gradient-to-r from-accent/80 to-accent/60 text-base font-semibold border border-accent/50 shadow-lg shadow-accent/30' 
          : 'text-accent hover:bg-gradient-to-r hover:from-surface/40 hover:to-surface/20 hover:border hover:border-white/20'
      }`}
    >
      Semana
    </a>
    <a 
      href="/hoy" 
      class={`px-4 py-2 rounded-lg transition-all ${
        url.pathname === '/hoy' 
          ? 'bg-accent text-base font-semibold' 
          : 'text-accent hover:bg-slate-800'
      }`}
    >
      Hoy
    </a>
    <a 
      href="/dia" 
      class={`px-4 py-2 rounded-lg transition-all ${
        url.pathname === '/dia' 
          ? 'bg-accent text-base font-semibold' 
          : 'text-accent hover:bg-slate-800'
      }`}
    >
      DÃ­a
    </a>
  </footer>
</section>
