---
import "../../styles/tailwind.css";
const { title = "Turnos" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta http-equiv="refresh" content="300" />
  </head>
<body class="bg-base text-slate-100 antialiased tracking-tight relative min-h-screen">
    <!-- Fondo Tron Legacy Mejorado -->
    <div class="fixed inset-0 z-0 pointer-events-none">
      <!-- Fondo base con más profundidad -->
      <div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-blue-950/50 to-purple-950/30"></div>
      
      <!-- Grid digital multi-capa -->
      <div class="absolute inset-0 opacity-8" style="background-image: linear-gradient(cyan 1px, transparent 1px), linear-gradient(90deg, cyan 1px, transparent 1px); background-size: 40px 40px; animation: grid-move 20s linear infinite;"></div>
      <div class="absolute inset-0 opacity-5" style="background-image: linear-gradient(blue 1px, transparent 1px), linear-gradient(90deg, blue 1px, transparent 1px); background-size: 80px 80px; animation: grid-move 30s linear reverse;"></div>
      
      <!-- Scanner lines mejorados con glow -->
      <div class="absolute inset-0">
        <div class="absolute h-0.5 w-full bg-gradient-to-r from-transparent via-cyan-400 to-transparent opacity-50 shadow-lg shadow-cyan-500/50" style="top: 25%; animation: scan-left 6s linear infinite; box-shadow: 0 0 20px cyan;"></div>
        <div class="absolute h-0.5 w-full bg-gradient-to-r from-transparent via-blue-400 to-transparent opacity-50" style="top: 50%; animation: scan-right 9s linear infinite; box-shadow: 0 0 20px blue;"></div>
        <div class="absolute h-0.5 w-full bg-gradient-to-r from-transparent via-purple-400 to-transparent opacity-50" style="top: 75%; animation: scan-left 7s linear infinite; box-shadow: 0 0 20px purple;"></div>
      </div>
      
      <!-- Verticales scanner -->
      <div class="absolute inset-0">
        <div class="absolute w-0.5 h-full bg-gradient-to-b from-transparent via-cyan-300 to-transparent opacity-40" style="left: 20%; animation: scan-down 8s linear infinite;"></div>
        <div class="absolute w-0.5 h-full bg-gradient-to-b from-transparent via-blue-300 to-transparent opacity-40" style="left: 60%; animation: scan-up 12s linear infinite; animation-delay: 2s;"></div>
        <div class="absolute w-0.5 h-full bg-gradient-to-b from-transparent via-purple-300 to-transparent opacity-40" style="left: 80%; animation: scan-down 10s linear infinite; animation-delay: 4s;"></div>
      </div>
      
      <!-- Circuitos complejos -->
      <div class="absolute inset-0">
        <div class="absolute top-20 left-10 w-32 h-32 border-2 border-cyan-500/30 rounded-full animate-pulse shadow-lg shadow-cyan-500/50"></div>
        <div class="absolute top-20 left-10 w-24 h-24 border border-cyan-400/20 rounded-full animate-spin" style="animation-duration: 20s;"></div>
        <div class="absolute bottom-20 right-10 w-24 h-24 border-2 border-blue-500/30 rotate-45 animate-pulse shadow-lg shadow-blue-500/50" style="animation-delay: 1s;"></div>
        <div class="absolute bottom-20 right-10 w-16 h-16 border border-blue-400/20 rotate-45 animate-spin" style="animation-duration: 15s; animation-delay: 1s;"></div>
        <div class="absolute top-1/2 left-1/3 w-16 h-16 border-2 border-purple-500/30 rotate-12 animate-pulse shadow-lg shadow-purple-500/50" style="animation-delay: 2s;"></div>
        <div class="absolute top-1/2 left-1/3 w-12 h-12 border border-purple-400/20 rotate-12 animate-spin" style="animation-duration: 25s; animation-delay: 2s;"></div>
      </div>
      
      <!-- Hexágonos flotantes -->
      <div class="absolute inset-0">
        <div class="absolute w-8 h-8 border-2 border-cyan-400/40 transform rotate-45 animate-pulse" style="top: 10%; left: 15%; animation: float-hex 8s ease-in-out infinite;"></div>
        <div class="absolute w-6 h-6 border-2 border-blue-400/40 transform rotate-12 animate-pulse" style="top: 35%; right: 20%; animation: float-hex 10s ease-in-out infinite; animation-delay: 2s;"></div>
        <div class="absolute w-10 h-10 border-2 border-purple-400/40 transform rotate-45 animate-pulse" style="bottom: 20%; left: 25%; animation: float-hex 9s ease-in-out infinite; animation-delay: 1s;"></div>
      </div>
      
      <!-- Partículas mejoradas con trails -->
      <div class="absolute inset-0">
        <div class="absolute w-2 h-2 bg-cyan-400 rounded-full shadow-lg shadow-cyan-400/50" style="top: 15%; left: 20%; animation: float-particle 6s ease-in-out infinite;"></div>
        <div class="absolute w-1.5 h-1.5 bg-blue-400 rounded-full shadow-lg shadow-blue-400/50" style="top: 30%; right: 25%; animation: float-particle 8s ease-in-out infinite; animation-delay: 1s;"></div>
        <div class="absolute w-2 h-2 bg-purple-400 rounded-full shadow-lg shadow-purple-400/50" style="top: 60%; left: 40%; animation: float-particle 7s ease-in-out infinite; animation-delay: 2s;"></div>
        <div class="absolute w-1.5 h-1.5 bg-cyan-300 rounded-full shadow-lg shadow-cyan-300/50" style="bottom: 25%; right: 15%; animation: float-particle 9s ease-in-out infinite; animation-delay: 3s;"></div>
        <div class="absolute w-1 h-1 bg-blue-300 rounded-full" style="top: 45%; left: 60%; animation: float-particle 11s ease-in-out infinite; animation-delay: 4s;"></div>
      </div>
      
      <!-- Efecto de data stream -->
      <div class="absolute inset-0 opacity-20">
        <div class="absolute w-full h-full bg-gradient-to-b from-transparent via-cyan-500/10 to-transparent" style="animation: data-stream 15s linear infinite;"></div>
        <div class="absolute w-full h-full bg-gradient-to-b from-transparent via-blue-500/10 to-transparent" style="animation: data-stream 20s linear infinite; animation-delay: 5s;"></div>
      </div>
      
      <!-- Gradiente de iluminación mejorado -->
      <div class="absolute inset-0 bg-gradient-to-t from-cyan-500/8 via-transparent to-purple-500/8"></div>
      <div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 via-transparent to-pink-500/5 opacity-50"></div>
    </div>
    
    <!-- Contenido principal -->
    <div class="relative z-10 min-h-screen">
      <slot />
    </div>
    
    <!-- Animaciones mejoradas Tron Legacy -->
    <style>
      @keyframes scan-left {
        0% { transform: translateX(-100%); }
        100% { transform: translateX(100%); }
      }
      
      @keyframes scan-right {
        0% { transform: translateX(100%); }
        100% { transform: translateX(-100%); }
      }
      
      @keyframes scan-down {
        0% { transform: translateY(-100%); }
        100% { transform: translateY(100%); }
      }
      
      @keyframes scan-up {
        0% { transform: translateY(100%); }
        100% { transform: translateY(-100%); }
      }
      
      @keyframes float {
        0%, 100% { transform: translateY(0px) translateX(0px); opacity: 0.3; }
        25% { transform: translateY(-10px) translateX(5px); opacity: 0.8; }
        50% { transform: translateY(-5px) translateX(-3px); opacity: 1; }
        75% { transform: translateY(-15px) translateX(3px); opacity: 0.6; }
      }
      
      @keyframes float-hex {
        0%, 100% { transform: translateY(0px) translateX(0px) rotate(45deg); opacity: 0.2; }
        25% { transform: translateY(-20px) translateX(10px) rotate(90deg); opacity: 0.6; }
        50% { transform: translateY(-10px) translateX(-5px) rotate(180deg); opacity: 0.9; }
        75% { transform: translateY(-30px) translateX(8px) rotate(270deg); opacity: 0.4; }
      }
      
      @keyframes float-particle {
        0%, 100% { transform: translateY(0px) translateX(0px); opacity: 0.3; box-shadow: 0 0 10px currentColor; }
        20% { transform: translateY(-15px) translateX(8px); opacity: 0.7; box-shadow: 0 0 20px currentColor, 0 0 40px currentColor; }
        40% { transform: translateY(-8px) translateX(-4px); opacity: 1; box-shadow: 0 0 30px currentColor, 0 0 60px currentColor; }
        60% { transform: translateY(-25px) translateX(6px); opacity: 0.8; box-shadow: 0 0 25px currentColor, 0 0 50px currentColor; }
        80% { transform: translateY(-12px) translateX(-2px); opacity: 0.5; box-shadow: 0 0 15px currentColor, 0 0 30px currentColor; }
      }
      
      @keyframes grid-move {
        0% { transform: translate(0, 0); }
        100% { transform: translate(60px, 60px); }
      }
      
      @keyframes data-stream {
        0% { transform: translateY(-100%); opacity: 0; }
        10% { opacity: 0.3; }
        50% { opacity: 0.6; }
        90% { opacity: 0.3; }
        100% { transform: translateY(100%); opacity: 0; }
      }
    </style>
  </body>
</html>
